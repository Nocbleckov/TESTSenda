<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="10dip"
                />
            <stroke
                android:width="1dip"
                android:color="#757575"
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:bottom="15dp"
                android:top="15dp"
                />
            <gradient
                android:angle="-90"
                android:startColor="#fd616161"
                android:endColor="#9e9e9e"
                />
        </shape>
    </item>
    <item
        android:state_focused="true"
        >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="10dip"
                />
            <stroke
                android:width="1dip"
                android:color="#757575"
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="15dp"
                android:bottom="15dp"
                />
            <solid
                android:color="#e0e0e0"
                />
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="10dip"
                />
            <stroke
                android:width="1dip"
                android:color="#757575"
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="15dp"
                android:bottom="15dp"
                />
            <gradient
                android:angle="-90"
                android:startColor="#e0e0e0"
                android:endColor="#9e9e9e"
                />
        </shape>
    </item>

</selector>