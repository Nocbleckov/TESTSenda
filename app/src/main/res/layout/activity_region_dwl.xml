<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="sip.com.senda.activities.RegionDwl"
    android:orientation="vertical"
    >

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_weight = "35"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapDwl"
        tools:context=".RegionDwl"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        />
    <ListView
        android:layout_weight="65"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaMisMapas_RegionDwl"
        />
    <Button
        android:text="Guardar Mapa"
        android:id="@+id/botonGuardarMapas_RegionDwl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onClickGuardarMapa"
        />
    <Button
        android:id="@+id/botonPruebaMapas_RegionDwl"
        android:text="Pruebas"
        android:textSize="8dp"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:onClick="onClickPruebas"
        />
</LinearLayout>