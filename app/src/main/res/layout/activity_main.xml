<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/layoutRelative_Main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:src="@drawable/logo_senda"
            android:id="@+id/imageLogo_Main"
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:layout_marginBottom="80dp"
            />

        <EditText

            android:hint="Nombre de Usuario"
            android:textSize="25dp"
            android:id="@+id/editTextUsuario_Main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo_Main"
            android:layout_marginTop="40dp"
            android:paddingLeft="25dp"
            android:inputType="textPersonName"

            />
        <EditText

            android:hint="ContraseÃ±a"
            android:textSize="25dp"
            android:id="@+id/editTextPass_Main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextUsuario_Main"
            android:layout_marginBottom="15dp"
            android:paddingLeft="25dp"
            android:inputType="textPassword"

            />

        <Button

            android:text="Ingresar"
            android:id="@+id/botonIngresar_Main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextPass_Main"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:onClick="onClickIngresarLogin"

            />

    </RelativeLayout>

</ScrollView>
